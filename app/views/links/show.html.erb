<div class="container inpost">
		<div class="row">
			<div class="col-md-8 inpost-background">

			<div class="row">
				<div class="col-md-12 inpost-title">

					<div class="inpost-avatar">
							<img class="img-responsive" src="<%= @link.user.avatar %>"/>
					</div>
					<h2><%= @link.title %></h2>
					<p>Picked By <a class="inpost-username"><%= @link.user.username %></a></p>
				</div>
			</div>

				<div class="row">
					<div class="col-md-12 image-wrapper">
						<img class="inpost-image" src="<%= @link.image %>"/>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">	
						<p><%= @link.description %></p>
						<p>tag, tag, tag, tag, tag</p>
					</div>
				</div>


			</div>



			<div class="col-md-4 inpost-sidebar">
				<div class="row">
					<div class="col-md-12">

						<div class="row">
							<div class="col-md-12">

								<div class="inpost-actions">

				          <%= link_to like_link_path(@link), method: :put do %>
				            <div class="hover-score">
				              <p class="hover-actual-score"><%= @link.get_upvotes.size %></p>
				              <p class="hover-plus-score">+</p>
				            </div>
				          <% end %>

				          <a target='_blank' href="<%= @link.url %>">
				            <div class="hover-basket">
				              <p class="hover-cart"><i class="fa fa-shopping-cart fa-lg"></i></p>
				          	</div>

				            
				          </a>

			          </div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12">
								<div class="cube-related">
								</div>
								<div class="cube-related">
								</div>
								<div class="cube-related">
								</div>
								<div class="cube-related">
								</div>
								<div class="cube-related">
								</div>
								<div class="cube-related">
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>